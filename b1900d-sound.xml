<?xml version="1.0"?>
 
<PropertyList>

	<fx>
<!-- Engine 1 -->
		<crank>
   			<name>engstart0</name>
   			<mode>once</mode>
   			<path>Sounds/turbine_start.wav</path>
   			<condition>
     			<greater-than>
       				<property>/controls/engines/engine[0]/condition</property>
       				<value>0</value>
     			</greater-than>
   			</condition>
   			<volume>
 				<property>/sim/sound/cabin</property>
 				<factor>0.3</factor>
     		</volume>
   			<position>
     			<x>-3</x>
     			<y>0</y>
     			<z>3</z>
   			</position>
   			<reference-dist>2.0</reference-dist>
   			<max-dist>4.0</max-dist>
  		</crank>

		<crank>
   			<name>engstart1</name>
   			<mode>once</mode>
   			<path>Sounds/turbine_start.wav</path>
   			<condition>
     			<greater-than>
       				<property>/controls/engines/engine[1]/condition</property>
       				<value>0</value>
     			</greater-than>
   			</condition>
   			<volume>
 				<property>/sim/sound/cabin</property>
 				<factor>0.3</factor>
     		</volume>
   			<position>
     			<x>3</x>
     			<y>0</y>
     			<z>3</z>
   			</position>
   			<reference-dist>2.0</reference-dist>
   			<max-dist>4.0</max-dist>
  		</crank>

		<prop>
    		<name>prop1</name>
    		<mode>looped</mode>
    		<path>Sounds/turboprop1.wav</path>
    		<condition>
    			<greater-than>
        			<property>/engines/engine[0]/rpm</property>
        			<value>100</value>
      			</greater-than>
      		</condition>
    		<volume>
      			<property>/engines/engine[0]/rpm</property>
      			<factor>0.0005</factor>
   	 		</volume>
    		<volume>
      			<property>/sim/sound/E_volume</property>
      		</volume>
    		<pitch>
      			<property>/engines/engine[0]/rpm</property>
      			<offset>0.2</offset>
      			<factor>0.0008</factor>
      			<min>0.2</min>
      			<max>1.0</max>
    		</pitch>
    		<position>
      			<x>-3</x>
      			<y>0</y>
      			<z>3</z>
    		</position>
  		</prop>

		<prop>
    		<name>prop2</name>
    		<mode>looped</mode>
    		<path>Sounds/turboprop1.wav</path>
    		<condition>
    			<greater-than>
        			<property>/engines/engine[1]/rpm</property>
        			<value>100</value>
      			</greater-than>
      		</condition>
    		<volume>
      			<property>/engines/engine[1]/rpm</property>
      			<factor>0.0005</factor>
   	 		</volume>
    		<volume>
      			<property>/sim/sound/E_volume</property>
      		</volume>
    		<pitch>
      			<property>/engines/engine[1]/rpm</property>
      			<offset>0.2</offset>
      			<factor>0.0008</factor>
      			<min>0.2</min>
      			<max>1.0</max>
    		</pitch>
    		<position>
      			<x>3</x>
      			<y>0</y>
      			<z>3</z>
    		</position>
  		</prop>
  
		<turbine0>
    		<name>turbine0</name>
    		<mode>looped</mode>
    		<path>Sounds/turbine_loop.wav</path>
    		<condition>
      			<greater-than>
        			<property>/engines/engine[0]/n2</property>
        			<value>50.995</value>
      			</greater-than>
    		</condition>
    		<volume>
      			<property>/sim/sound/cabin</property>
      			<factor>0.2</factor>
      		</volume>
    		<pitch>
      			<property>/engines/engine[0]/n2</property>
     			<offset>1.0</offset>
      			<factor>0.01</factor>
    		</pitch>
    		<position>
      			<x>-3</x>
      			<y>0</y>
      			<z>3</z>
    		</position>
   			<reference-dist>5.0</reference-dist>
   			<max-dist>10.0</max-dist>
		</turbine0>
 
		<turbine1>
    		<name>turbine1</name>
    		<mode>looped</mode>
    		<path>Sounds/turbine_loop.wav</path>
    		<condition>
      			<greater-than>
        			<property>/engines/engine[1]/n2</property>
        			<value>50.995</value>
      			</greater-than>
    		</condition>
    		<volume>
      			<property>/sim/sound/cabin</property>
      			<factor>0.2</factor>
      		</volume>
    		<pitch>
      			<property>/engines/engine[1]/n2</property>
     			<offset>1.0</offset>
      			<factor>0.01</factor>
    		</pitch>
    		<position>
      			<x>3</x>
      			<y>0</y>
      			<z>3</z>
    		</position>
   			<reference-dist>5.0</reference-dist>
   			<max-dist>10.0</max-dist>
		</turbine1>
  
		<shutdown>
    		<name>engine0 off</name>
    		<mode>once</mode>
    		<path>Sounds/turbine_shutdown.wav</path>
    		<condition>
      			<equals>
        			<property>/controls/engines/engine[0]/condition</property>
        			<value>0</value>
      			</equals>
    		</condition>
    		<volume>
				<property>/sim/sound/cabin</property>
				<factor>0.3</factor>
     		</volume>
    		<position>
      			<x>-3</x>
      			<y>0</y>
      			<z>3</z>
    		</position>
   			<reference-dist>2.0</reference-dist>
   			<max-dist>4.0</max-dist>
  		</shutdown>

		<shutdown>
    		<name>engine1 off</name>
    		<mode>once</mode>
    		<path>Sounds/turbine_shutdown.wav</path>
    		<condition>
      			<equals>
        			<property>/controls/engines/engine[1]/condition</property>
        			<value>0</value>
      			</equals>
    		</condition>
    		<volume>
				<property>/sim/sound/cabin</property>
				<factor>0.3</factor>
     		</volume>
    		<position>
      			<x>3</x>
      			<y>0</y>
      			<z>3</z>
    		</position>
   			<reference-dist>2.0</reference-dist>
   			<max-dist>4.0</max-dist>
  		</shutdown>

		<rumble>
   			<name>rumble</name>
   			<mode>looped</mode>
   			<path>Sounds/rumble.wav</path>
   			<condition>
    			<or>
     				<property>/gear/gear[0]/wow</property>
     				<property>/gear/gear[1]/wow</property>
     				<property>/gear/gear[2]/wow</property>
    			</or>
   			</condition>
   			<volume>
   				<property>/sim/sound/cabin</property>
   			</volume>
   			<volume>
     			<property>/velocities/airspeed-kt</property>
     			<type>log</type>
     			<factor>0.5</factor>
     			<max>0.5</max>
   			</volume>
   			<reference-dist>10.0</reference-dist>
   			<max-dist>20.0</max-dist>
  		</rumble>

		<gear>
      		<name>gear</name>
      		<mode>in-transit</mode>
      		<path>Sounds/gear.wav</path>
      		<property>/gear/gear[0]/position-norm</property>
      		<pitch>
       			<internal>dt_play</internal>
        		<offset>0.8</offset>
        		<factor>-0.001</factor>
      		</pitch>
   			<reference-dist>5.0</reference-dist>
   			<max-dist>10.0</max-dist>
    	</gear>

		<gear>
      		<name>gear-lock</name>
      		<path>Sounds/gear-lck.wav</path>
      		<condition>
        		<equals>
          			<property>/gear/gear[0]/position-norm</property>
          			<value>0</value>
        		</equals>
      		</condition>
   			<reference-dist>5.0</reference-dist>
   			<max-dist>10.0</max-dist>
    	</gear>

		<squeal>
   			<name>squeal</name>
   			<path>Sounds/squeal.wav</path>
   			<condition>
    			<or>
     				<property>/gear/gear[0]/wow</property>
     				<property>/gear/gear[1]/wow</property>
     				<property>/gear/gear[2]/wow</property>
    			</or>
   			</condition>
   			<volume>
    			<property>/sim/sound/E_volume</property>
    		</volume>
   			<volume>
    			<property>/velocities/airspeed-kt</property>
    			<factor>0.01</factor>
   			</volume>
			<pitch>
    			<property>/velocities/airspeed-kt</property>
    			<factor>0.0025</factor>
    			<offset>1.0</offset>
   			</pitch>
  		</squeal>
 
		<flap>
   			<name>flaps</name>
   			<mode>in-transit</mode>
   			<path>Sounds/flaps.wav</path>
   			<property>/surface-positions/flap-pos-norm</property>
   			<volume>
    			<property>/sim/sound/cabin</property>
    		</volume>
   			<reference-dist>5.0</reference-dist>
   			<max-dist>10.0</max-dist>
  		</flap>

		<wind>
   			<name>wind</name>
   			<mode>looped</mode>
   			<path>Sounds/wind.wav</path>
   			<property>/velocities/airspeed-kt</property>
   			<volume>
    			<property>/position/altitude-ft</property>
    			<factor>-0.000015</factor>
    			<offset>1.0</offset>
    			<min>0.1</min>
    			<max>0.5</max>
   			</volume>
   			<volume>
     			<property>/velocities/airspeed-kt</property>
     			<factor>0.0015</factor>
     			<min>0.03</min>
     			<max>0.5</max>
   			</volume>
   			<volume>
   				<property>/sim/sound/cabin</property>
   			</volume>
   			<pitch>
    			<property>/velocities/airspeed-kt</property>
    			<factor>0.01</factor>
    			<offset>0.8</offset>
   			</pitch>
		</wind>
 
	</fx>
 
</PropertyList>
