<?xml version="1.0"?>
 
<PropertyList>

 <fx>
 
<!-- Engine 1 -->
  <crank>
   <name>engstart1</name>
   <mode>once</mode>
   <path>Sounds/turbine_start.wav</path>
   <condition>
     <greater-than>
       <property>/controls/engines/engine[0]/condition</property>
       <value>0</value>
     </greater-than>
   </condition>
   <volume>
 <property>/engines/engine[0]/running</property>
     <factor>0.2</factor>
   </volume>
   <position>
     <x>-3</x>
     <y>0</y>
     <z>3</z>
   </position>
   <reference-dist>2.0</reference-dist>
   <max-dist>4.0</max-dist>
  </crank>

  <prop>
    <name>prop1 from cabin</name>
    <mode>looped</mode>
    <path>Sounds/turboprop1.wav</path>
    <condition>
    <and>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>100</value>
      </greater-than>
      <equals>
        <property>/sim/current-view/view-number</property>
        <value>0</value>
      </equals>
      </and>
    </condition>
    <volume>
      <property>/engines/engine[0]/prop-thrust</property>
      <factor>0.0002</factor>
      <min>0.0</min>
      <max>0.4</max>
    </volume>
    <pitch>
      <property>/engines/engine[0]/rpm</property>
      <offset>0.1</offset>
      <factor>0.0008</factor>
      <min>0.1</min>
      <max>1.2</max>
    </pitch>
    <position>
      <x>-3</x>
      <y>0</y>
      <z>3</z>
    </position>
  </prop>

  <prop>
    <name>prop1 from outside</name>
    <mode>looped</mode>
    <path>Sounds/turboprop1.wav</path>
    <condition>
    <and>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>100</value>
      </greater-than>
      <not-equals>
        <property>/sim/current-view/view-number</property>
        <value>0</value>
      </not-equals>
      </and>
    </condition>
    <volume>
      <property>/engines/engine[0]/prop-thrust</property>
      <factor>0.001</factor>
      <min>0.0</min>
      <max>1.0</max>
    </volume>
    <pitch>
      <property>/engines/engine[0]/rpm</property>
      <offset>0.1</offset>
      <factor>0.0008</factor>
      <min>0.1</min>
      <max>1.2</max>
    </pitch>
    <position>
      <x>-3</x>
      <y>0</y>
      <z>3</z>
    </position>
  </prop>



  
  <turbine0>
    <name>turbine0</name>
    <mode>looped</mode>
    <path>Sounds/turbine_loop.wav</path>
    <condition>
      <greater-than>
        <property>/engines/engine[0]/n2</property>
        <value>50.995</value>
      </greater-than>
    </condition>
    <volume>
      <property>/engines/engine[0]/running</property>
      <factor>0.1</factor>
    </volume>
    <pitch>
      <property>/engines/engine[0]/n2</property>
      <offset>0.1</offset>
      <factor>0.01</factor>
    </pitch>
    <position>
      <x>-3</x>
      <y>0</y>
      <z>3</z>
    </position>
   <reference-dist>5.0</reference-dist>
   <max-dist>10.0</max-dist>
  </turbine0>
  
  <shutdown>
    <name>engine0 off</name>
    <mode>once</mode>
    <path>Sounds/turbine_shutdown.wav</path>
    <condition>
      <equals>
        <property>/controls/engines/engine[0]/condition</property>
        <value>0</value>
      </equals>
    </condition>
    <volume>
<property>/engines/engine[0]/n2</property>
     <factor>0.005</factor>
     </volume>
    <position>
      <x>-3</x>
      <y>0</y>
      <z>3</z>
    </position>
   <reference-dist>2.0</reference-dist>
   <max-dist>4.0</max-dist>
  </shutdown>

