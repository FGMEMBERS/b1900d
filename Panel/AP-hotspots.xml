<PropertyList>

    <name>AP hotspots</name>
    <w-base>140</w-base>
    <h-base>64</h-base>
    <w>140</w>
    <h>64</h>

    <actions>
<!--
    <action>
        <name>bezel outline</name>
        <x>-70</x>
        <y>-32</y>
        <w>140</w>
        <h>64</h>
    </action>
-->
        <action>
            <name>Autopilot ON</name>
            <button>0</button>
            <x>-22</x>
            <y>-24</y>
            <w>16</w>
            <h>10</h>
            <binding>
                <command>nasal</command>
                <script>systems.FlDr.toggle_autopilot("ap")</script>
            </binding>
        </action>

        <action>
            <name>Low Bank</name>
            <button>0</button>
            <x>-24</x>
            <y>10</y>
            <w>18</w>
            <h>10</h>
            <binding>
                <command>nasal</command>
                <script>systems.FlDr.toggle_autopilot("bank")</script>
            </binding>
        </action>

        <action>
            <name>Yaw Damper ON</name>
            <button>0</button>
            <x>-2</x>
            <y>-24</y>
            <w>16</w>
            <h>10</h>
            <binding>
                <command>nasal</command>
                <script>systems.FlDr.toggle_autopilot("yd")</script>
             </binding>
        </action>

        <action>
            <name>Pitch Decrease</name>
            <button>0</button>
            <x>-49</x>
            <y>0</y>
            <w>18</w>
            <h>18</h>
            <binding>
                <command>nasal</command>
                <script>systems.FlDr.pitch_wheel(-1)</script>
            </binding>
        </action>

        <action>
            <name>Pitch Increase</name>
            <button>0</button>
            <x>-49</x>
            <y>-18</y>
            <w>18</w>
            <h>18</h>
            <binding>
                <command>nasal</command>
                <script>systems.FlDr.pitch_wheel(1)</script>
            </binding>
        </action>

        <action>
            <name>Roll Decrease</name>
            <button>0</button>
            <x>20</x>
            <y>-22</y>
            <w>20</w>
            <h>40</h>
            <binding>
                <command>nasal</command>
                <script>systems.FlDr.roll_knob(-1)</script>
            </binding>
        </action>

        <action>
            <name>Roll Increase</name>
            <button>0</button>
            <x>40</x>
            <y>-22</y>
            <w>20</w>
            <h>40</h>
            <binding>
                <command>nasal</command>
                <script>systems.FlDr.roll_knob(1)</script>
            </binding>
        </action>

    </actions>

</PropertyList>