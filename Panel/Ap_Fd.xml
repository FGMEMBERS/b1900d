 <!--     LNAV MODES        -->


  <action>
    <name>Heading Toggle</name>
    <button>0</button>
    <x>-46</x>
    <y>-4</y>
    <w>17</w>
    <h>10</h>
    <binding>
    <command>nasal</command>
    <script>systems.FlDr.set_mode("hdg");</script>
    </binding>
  </action>

  <action>
    <name>Nav Toggle</name>
    <button>0</button>
    <x>-26</x>
    <y>-4</y>
    <w>17</w>
    <h>10</h>
    <binding>
    <command>nasal</command>
    <script>systems.FlDr.set_mode("nav");</script>
    </binding>
  </action>

   <action>
     <name>Appr Toggle</name>
     <button>0</button>
     <x>-7</x>
     <y>-4</y>
     <w>17</w>
     <h>10</h>
     <binding>
     <command>nasal</command>
    <script>systems.FlDr.set_mode("apr");</script>
     </binding>
   </action>


   <action>
     <name>BC Toggle</name>
     <button>0</button>
     <x>13</x>
     <y>-4</y>
     <w>17</w>
     <h>10</h>
     <binding>
     <command>nasal</command>
    <script>systems.FlDr.set_mode("bc");</script>
     </binding>
   </action>


<!-- VNAV     MODES -->

 <action>
    <name>Altitude Hold Toggle </name>
    <button>0</button>
    <x>-46</x>
    <y>-19</y>
    <w>17</w>
    <h>10</h>
    <binding>
    <command>nasal</command>
     <command>nasal</command>
    <script>systems.FlDr.set_mode("alt");</script>
    </binding>
    
  </action>

 <action>
    <name>Altitude Select Toggle</name>
    <button>0</button>
    <x>-26</x>
    <y>-19</y>
    <w>17</w>
    <h>10</h>
    <binding>
     <command>nasal</command>
    <script>systems.FlDr.set_mode("asel");</script>
    </binding>
  </action>


  <action>
    <name>VS Toggle On</name>
    <button>0</button>
    <x>-7</x>
    <y>-19</y>
    <w>17</w>
    <h>10</h>
    <binding>
     <command>nasal</command>
    <script>systems.FlDr.set_mode("vs");</script>
    </binding>
  </action>

  <action>
    <name>IAS Toggle On</name>
    <button>0</button>
    <x>13</x>
    <y>-19</y>
    <w>17</w>
    <h>10</h>
    <binding>
     <command>nasal</command>
    <script>systems.FlDr.set_mode("ias");</script>
    </binding>
  </action>

  <action>
    <name>DCS Toggle On</name>
    <button>0</button>
    <x>33</x>
    <y>-19</y>
    <w>17</w>
    <h>10</h>
    <binding>
     <command>nasal</command>
    <script>systems.FlDr.set_mode("dcs");</script>
    </binding>
  </action>

   <action>
     <name>Climb Toggle</name>
     <button>0</button>
     <x>33</x>
     <y>-4</y>
     <w>17</w>
     <h>10</h>
     <binding>
     <command>nasal</command>
    <script>systems.FlDr.set_mode("climb");</script>
