 <!--     LNAV MODES        -->


  <action>
    <name>Heading Toggle</name>
    <button>0</button>
    <x>-46</x>
    <y>-4</y>
    <w>17</w>
    <h>10</h>
    <binding>
    <command>nasal</command>
    <script>systems.set_fdmode(0,1);</script>
    </binding>
  </action>

  <action>
    <name>Nav Toggle</name>
    <button>0</button>
    <x>-26</x>
    <y>-4</y>
    <w>17</w>
    <h>10</h>
    <binding>
    <command>nasal</command>
    <script>systems.set_fdmode(0,2);</script>
    </binding>
  </action>

   <action>
     <name>Appr Toggle</name>
     <button>0</button>
     <x>-7</x>
     <y>-4</y>
     <w>17</w>
     <h>10</h>
     <binding>
     <command>nasal</command>
    <script>systems.set_fdmode(0,4);</script>
     </binding>
   </action>


   <action>
     <name>BC Toggle</name>
     <button>0</button>
     <x>13</x>
     <y>-4</y>
     <w>17</w>
     <h>10</h>
     <binding>
     <command>property-toggle</command>
    <property>instrumentation/nav/back-course-btn</property>
     </binding>
   </action>


<!-- VNAV     MODES -->

 <action>
    <name>Altitude Hold Toggle </name>
    <button>0</button>
    <x>-46</x>
    <y>-19</y>
    <w>17</w>
    <h>10</h>
    <binding>
    <command>nasal</command>
    <script>
        setprop("autopilot/settings/target-altitude-ft",getprop("position/altitude-ft"));
        systems.set_fdmode(1,1);
    </script>
    </binding>
    
  </action>

 <action>
    <name>Altitude Select Toggle</name>
    <button>0</button>
    <x>-26</x>
    <y>-19</y>
    <w>17</w>
    <h>10</h>
    <binding>
    <command>nasal</command>
    <script>systems.set_fdmode(1,2);</script>
    </binding>
  </action>


  <action>
    <name>VS Toggle On</name>
    <button>0</button>
    <x>-7</x>
    <y>-19</y>
    <w>17</w>
    <h>10</h>
    <binding>
    <command>nasal</command>
    <script>systems.set_fdmode(1,3);</script>
    </binding>
  </action>


  <action>
    <name>IAS Toggle On</name>
    <button>0</button>
    <x>13</x>
    <y>-19</y>
    <w>17</w>
    <h>10</h>
    <binding>
    <command>nasal</command>
    <script>systems.set_fdmode(2,1);</script>
    </binding>
  </action>

  <action>
    <name>DCS Toggle On</name>
    <button>0</button>
    <x>33</x>
    <y>-19</y>
    <w>17</w>
    <h>10</h>
    <binding>
    <command>nasal</command>
    <script>systems.set_fdmode(1,4);</script>
    </binding>
  </action>

   <action>
     <name>Climb Toggle</name>
     <button>0</button>
     <x>33</x>
     <y>-4</y>
     <w>17</w>
     <h>10</h>
     <binding>
     <command>nasal</command>
    <script>systems.set_fdmode(1,5);</script>
     </binding>
   </action>

 </actions>
</PropertyList>
