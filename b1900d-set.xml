<PropertyList>


  <sim>

    <description>Beechcraft B1900D  (YASim) w 3d panel</description>
  <status>developement</status>

  <author>Syd Adams (3d model/FDM)
  - Jean-Yves Lefort (MKVIII gpws)
   </author>

  <flight-model>yasim</flight-model>
  <aero>b1900d</aero>
  <fuel-fraction>0.8</fuel-fraction>

  <startup>
   <splash-texture>Aircraft/b1900d/b1900dsplash.rgb</splash-texture>
  </startup>

  <mk-viii>
    <assemblies>
      <emission>
        <red alias="/sim/model/b1900d/material/instruments/emission/red"/>
        <green alias="/sim/model/b1900d/material/instruments/emission/green"/>
        <blue alias="/sim/model/b1900d/material/instruments/emission/blue"/>
        <factor alias="/sim/model/b1900d/material/instruments/factor"/>
      </emission>
    </assemblies>
  </mk-viii>

  <model>
   <path>Aircraft/b1900d/Models/b1900d-anim.xml</path>
   <b1900d>
       <wiper type="bool">true</wiper>
       
             <material>
         <instruments>
           <diffuse>
             <red type="string">1.0</red>
             <green type="string">1.0</green>
             <blue type="string">1.0</blue>
           </diffuse>
           <ambient>
             <red type="string">1.0</red>
             <green type="string">1.0</green>
             <blue type="string">1.0</blue>
           </ambient>
           <specular>
             <red type="string">0.0</red>
             <green type="string">0.0</green>
             <blue type="string">0.0</blue>
           </specular>
           <emission>
             <red type="string">0.9</red>
             <green type="string">0.5</green>
             <blue type="string">0.2</blue>
           </emission>
           <transparency>
             <alpha>1.0</alpha>
           </transparency>
           <shininess>0</shininess>
           <factor>0.0</factor>
         </instruments>
</material> 
</b1900d>
 </model>
  
   
   <view n="0">
    <name>Cockpit</name>
    <type>lookfrom</type>
    <internal type="bool">true</internal>
    <config>
      <target-x-offset-m type="double">-0.25</target-x-offset-m>
      <target-y-offset-m type="double">0.26</target-y-offset-m>
      <target-z-offset-m type="double">-4.15</target-z-offset-m>
      <x-offset-m type="double">-0.25</x-offset-m>
      <y-offset-m type="double">0.26</y-offset-m>
      <z-offset-m type="double">-4.15</z-offset-m>
     <pitch-offset-deg>-12</pitch-offset-deg>
     <default-field-of-view-deg>60.0</default-field-of-view-deg>
    </config>
  </view>


  <current-view>
    <field-of-view>60.0</field-of-view>
  </current-view>
  
  <systems>
    <electrical>
      <path></path>
    </electrical>
  <autopilot>
   <path>Aircraft/b1900d/b1900d-autopilot.xml</path>
  </autopilot>
  </systems>
  
  <sound>
   <path>Aircraft/b1900d/b1900d-sound.xml</path>
  </sound>


<!-- uncomment this for popup gps 
<panel>
    <path>Aircraft/b1900d/Panel/large_gps.xml</path>
    <visibility>false</visibility>
</panel>
-->

<!--  comment this out if popup gps is enabled -->
<panel>
    <path>Aircraft/beech99/beech99-panel.xml</path>
    <visibility>false</visibility>
</panel>
<!-- ******************************************-->
  <flaps>
   <setting>0.000</setting>
   <setting>0.25</setting> 
   <setting>0.50</setting> 
   <setting>0.75</setting> 
   <setting>1.000</setting> 
  </flaps>
  
  <hud>
   <enable3d>false</enable3d>
  </hud>

  <virtual-cockpit>true</virtual-cockpit>
  <allow-toggle-cockpit>true</allow-toggle-cockpit>

  <help>
   <title>Beechcraft B1900D</title>
   <key>
   <name>CTRL-A</name>
   <desc>Toggle autopilot on/off</desc>
   </key>
   <line></line>
   <text>
   Autopilot modes are selected with the FlightDirector:
   Autopilot on with no flightdirector modes selected
   defaults to Wing-Level;
   
   
   </text>
  </help>


       <weight n="0">
        <name>Crew</name>
        <weight-lb>380</weight-lb> 
        <max-lb>400</max-lb>
       <min-lb>180</min-lb>
        </weight>

        <weight n="1">
        <name>Passengers</name>
        <weight-lb>4500</weight-lb> 
        <max-lb>4500</max-lb>
        <min-lb>0</min-lb>      
        </weight>

 </sim>

 <nasal>
     <b1900d>
       <script>settimer(func {gui.menuEnable("autopilot", 0)}, 1)</script>
     </b1900d>
   <systems>
     <file>Aircraft/b1900d/Nasal/systems.nas</file>
     <file>Aircraft/b1900d/Nasal/b1900d-electrical.nas</file>
     <file>Aircraft/b1900d/Nasal/flightdirector.nas</file>
   </systems>
 </nasal>


 <!-- aircraft specific loading -->
 <yasim>
  <pilot-lbs>180</pilot-lbs>
  <copilot-lbs>185</copilot-lbs>

  <pass01>0</pass01>
  <pass02>160</pass02>
  <pass03>140</pass03>
  <pass04>190</pass04>
  <pass05>210</pass05>
  <pass06>60</pass06>
  <pass07>0</pass07>
  <pass08>180</pass08>
  <pass09>160</pass09>
  <pass10>220</pass10>
  <pass11>110</pass11>
  <pass12>130</pass12>
  <pass13>190</pass13>
  <pass14>0</pass14>
  <pass15>170</pass15>
  <pass16>80</pass16>
  <pass17>150</pass17>
  <pass18>180</pass18>
  <pass19>0</pass19>
  
  
 </yasim>

