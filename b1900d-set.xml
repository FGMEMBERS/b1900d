<!--   power / engines on  -->
 <controls>
 <electric>
 <battery-switch>true</battery-switch>
 <engine n="0">
 <generator>true</generator>
 </engine>
 <engine n="1">
 <generator>true</generator>
 </engine>
 </electric>
  <gear>
   <brake-parking>1</brake-parking>
  </gear>
<engines>
  <engine n="0">
    <condition>1</condition>
    <propeller-pitch>1</propeller-pitch>
  </engine>
  <engine n="1">
    <condition>1</condition>
    <propeller-pitch>1</propeller-pitch>
  </engine>
</engines>
<switches>
  <master-panel type="bool">true</master-panel>
 <master-avionics type="bool">true</master-avionics>
</switches>
<lighting>
<ice-lights type="bool">false</ice-lights>
<recog type="bool">false</recog>
<engines-norm type="double">0.500</engines-norm>
<instruments-norm type="double">0.500</instruments-norm>
<eadi-ehsi-norm type="double">0.800</eadi-ehsi-norm>
<panel-norm type="double">0.500</panel-norm>
</lighting>
</controls>

    <autopilot>
        <locks>
        <passive-mode type="bool">true</passive-mode>
        </locks>
    </autopilot>

<instrumentation>
<gps>
 <serviceable>true</serviceable> 
</gps>
<nav>
  <slaved-to-gps>false</slaved-to-gps>
</nav>
<nav n="1">
  <slaved-to-gps>false</slaved-to-gps>
</nav>
<mk-viii>
 <serviceable>true</serviceable>
 <configuration-module>
  <category-1>1</category-1>	<!-- GA Fast, 150' Mode 4B -->
 </configuration-module>
 <inputs>
  <arinc429>
   <decision-height-ncd>false</decision-height-ncd>
   <decision-height>200</decision-height>
  </arinc429>
 </inputs>
</mk-viii>
</instrumentation>

<environment>
  <turbulence>
    <use-cloud-turbulence>true</use-cloud-turbulence>
  </turbulence>
</environment>

<input>
<keyboard>
 <key n="1">
  <name>Ctrl-A</name>
  <desc>Toggle autopilot</desc>
  <binding>
   <command>property-toggle</command>
   <property>/instrumentation/flightdirector/autopilot-on</property>
  </binding>
 </key>
</keyboard>
</input>

</PropertyList>
