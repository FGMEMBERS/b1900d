<?xml version="1.0"?>
<!--
************************************************************************
Beechcraft B1900D
July 2004 Syd Adams
************************************************************************
-->

<PropertyList>
    <sim>
        <description>Beechcraft B1900D</description>
        <status>developement</status>
        <author>Syd Adams (3d model/FDM) - Jean-Yves Lefort (MKVIII gpws)</author>
        <flight-model>yasim</flight-model>
        <aero>b1900d</aero>
        <fuel-fraction>0.8</fuel-fraction>
        <startup>
            <splash-texture>Aircraft/b1900d/b1900dsplash1.rgb</splash-texture>
        </startup>

        <tutorials>
        <tutorial include="Tutorials/startup_tutorial.xml"/>
        </tutorials>

    <mk-viii>
        <assemblies>
            <emission>
                <red alias="/sim/model/b1900d/material/instruments/emission/red"/>
                <green alias="/sim/model/b1900d/material/instruments/emission/green"/>
                <blue alias="/sim/model/b1900d/material/instruments/emission/blue"/>
                <factor alias="/controls/lighting/instruments-norm"/>
            </emission>
        </assemblies>
    </mk-viii>

    <model>
        <path>Aircraft/b1900d/Models/b1900d-anim.xml</path>
        <start-idling type="bool">0</start-idling>
        <variant type="int">0</variant>
        <b1900d>
            <wiper type="bool">true</wiper>
            <material>
                <instruments>
                    <diffuse>
                        <red type="string">1.0</red>
                        <green type="string">1.0</green>
                        <blue type="string">1.0</blue>
                    </diffuse>
                    <ambient>
                        <red type="string">1.0</red>
                        <green type="string">1.0</green>
                        <blue type="string">1.0</blue>
                    </ambient>
                    <specular>
                        <red type="string">0.0</red>
                        <green type="string">0.0</green>
                        <blue type="string">0.0</blue>
                    </specular>
                    <emission>
                        <red type="string">0.9</red>
                        <green type="string">0.5</green>
                        <blue type="string">0.2</blue>
                    </emission>
                    <transparency>
                        <alpha>1.0</alpha>
                    </transparency>
                    <shininess>0</shininess>
                    <factor>0.0</factor>
                </instruments>
            </material> 
        </b1900d>
    </model>

    <view n="0">
        <internal archive="y">true</internal>
        <name>Cockpit</name>
        <type>lookfrom</type>
        <internal type="bool">true</internal>
        <config>
            <x-offset-m type="double">-0.38</x-offset-m>
            <y-offset-m type="double">0.27</y-offset-m>
            <z-offset-m type="double">-4.192</z-offset-m>
            <pitch-offset-deg>-15</pitch-offset-deg>
            <default-field-of-view-deg>60.0</default-field-of-view-deg>
        </config>
    </view>

    <current-view>
        <field-of-view>60.0</field-of-view>
    </current-view>

    <systems>
        <electrical>
            <path></path>
        </electrical>
        <autopilot>
            <path>Aircraft/b1900d/b1900d-autopilot.xml</path>
        </autopilot>
    </systems>

    <sound>
        <path>Aircraft/b1900d/b1900d-sound.xml</path>
    </sound>

    <flaps>
        <setting>0.000</setting>
        <setting>0.25</setting>
        <setting>0.50</setting>
        <setting>0.75</setting>
        <setting>1.000</setting>
    </flaps>

    <hud>
        <enable3d>false</enable3d>
    </hud>

    <virtual-cockpit>true</virtual-cockpit>
    <allow-toggle-cockpit>true</allow-toggle-cockpit>

    <help>
        <title>Beechcraft B1900D</title>
        <line></line>
        <key>
            <name>CTRL-A</name>
            <desc>Toggle autopilot on/off</desc>
        </key>
        <line></line>
        <line>Note:</line>
        <line>Autopilot on with no flightdirector modes selected</line>
        <line>defaults to Wing-Level;</line>
        <line></line>
    </help>

    <weight n="0">
        <name>Crew</name>
        <weight-lb>180</weight-lb>
        <max-lb>400</max-lb>
        <min-lb>180</min-lb>
    </weight>

    <weight n="1">
        <name>Pax/Baggage</name>
        <weight-lb>2500</weight-lb>
        <max-lb>4000</max-lb>
        <min-lb>0</min-lb>
    </weight>

    <yokes-visible type="bool">1</yokes-visible>

    <menubar>
        <default>
            <menu n="10">
                <label>B1900D</label>
                <enabled type="bool">true</enabled>
                <item>
                    <label>Start Idling</label>
                    <binding>
                        <command>property-toggle</command>
                        <property>sim/model/start-idling</property>
                    </binding>
                </item>
                <item>
                    <label>Yokes On/Off</label>
                    <binding>
                        <command>property-toggle</command>
                        <property>sim/yokes-visible</property>
                    </binding>
                </item>
                <item>
                    <label>Select Livery</label>
                    <binding>
                        <command>nasal</command>
                        <script>aircraft.livery.dialog.toggle()</script>
                    </binding>
                </item>
            </menu>
        </default>
    </menubar>

</sim>

<controls>
        <electric>
            <battery-switch type = "bool">0</battery-switch>
            <avionics-switch type = "bool">0</avionics-switch>
            <external-power type = "bool">0</external-power>
            <engine n="0">
            <generator>false</generator>
            </engine>
            <engine n="1">
            <generator>false</generator>
            </engine>
        </electric>
        
        <lighting>
            <instrument-lights>0</instrument-lights>
        </lighting>
        
        <gear>
            <brake-parking>1</brake-parking>
        </gear>
        
        <engines>
            <engine n="0">
            <condition>0</condition>
            <propeller-pitch>0</propeller-pitch>
            </engine>
            <engine n="1">
            <condition>0</condition>
            <propeller-pitch>0</propeller-pitch>
            </engine>
        </engines>
</controls>

    <instrumentation>
        <flightdirector>
            <serviceable>true</serviceable>
            </flightdirector>
        <gps>
            <serviceable>true</serviceable> 
        </gps>
        <nav>
            <slaved-to-gps>false</slaved-to-gps>
        </nav>
        <nav n="1">
            <slaved-to-gps>false</slaved-to-gps>
        </nav>
        <mk-viii>
            <serviceable>true</serviceable>
            <configuration-module>
            <category-1>1</category-1><!-- GA Fast, 150' Mode 4B -->
            </configuration-module>
            <inputs>
                <arinc429>
                <decision-height-ncd>false</decision-height-ncd>
                <decision-height>200</decision-height>
                </arinc429>
            </inputs>
        </mk-viii>
    <altimeter>
        <millibars type= "double">0</millibars>
    </altimeter>
    </instrumentation>

    <engines>
    <engine n="0">
    <running>0</running>
    <fuel-flow-pph type="float">0</fuel-flow-pph>
    </engine>
    <engine n="1">
    <running>0</running>
    <fuel-flow-pph type="float">0</fuel-flow-pph>
    </engine>
    </engines>

    <autopilot>
        <locks>
            <passive-mode type="bool">true</passive-mode>
        </locks>
    </autopilot>

    <environment>
        <turbulence>
        <use-cloud-turbulence>true</use-cloud-turbulence>
        </turbulence>
    </environment>
    
    
    <input>
        <keyboard>
        <key n="1">
        <name>Ctrl-A</name>
        <desc>Toggle autopilot</desc>
        <binding>
            <command>property-toggle</command>
            <property>autopilot/locks/passive-mode</property>
        </binding>
        </key>
    </keyboard>
    </input>

    <nasal>
        <systems>
            <file>Aircraft/b1900d/Nasal/Electrical.nas</file>
            <file>Aircraft/b1900d/Nasal/systems.nas</file>
            <file>Aircraft/b1900d/Nasal/flightdirector.nas</file>
        </systems>
    </nasal>

</PropertyList>