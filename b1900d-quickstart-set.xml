<PropertyList include="b1900d-base.xml">
<sim>
        <tutorials>
        <!--tutorial include="Tutorials/startup_tutorial.xml"/-->
        </tutorials>
</sim>

<controls>
        <electric>
            <battery-switch type = "bool">1</battery-switch>
            <avionics-switch type = "bool">1</avionics-switch>
            <external-power type = "bool">1</external-power>
            <engine n="0">
            <generator>true</generator>
            </engine>
            <engine n="1">
            <generator>true</generator>
            </engine>
        </electric>
        <lighting>
            <instrument-lights>1</instrument-lights>
        </lighting>
        <gear>
            <brake-parking>1</brake-parking>
        </gear>
        <engines>
            <engine n="0">
            <condition>1</condition>
            <propeller-pitch>1</propeller-pitch>
            </engine>
            <engine n="1">
            <condition>1</condition>
            <propeller-pitch>1</propeller-pitch>
            </engine>
        </engines>
    </controls>

    <instrumentation>
        <flightdirector>
            <serviceable>true</serviceable>
            </flightdirector>
        <gps>
            <serviceable>true</serviceable> 
        </gps>
        <nav>
            <slaved-to-gps>false</slaved-to-gps>
        </nav>
        <nav n="1">
            <slaved-to-gps>false</slaved-to-gps>
        </nav>
        <mk-viii>
            <serviceable>true</serviceable>
            <configuration-module>
            <category-1>1</category-1><!-- GA Fast, 150' Mode 4B -->
            </configuration-module>
            <inputs>
                <arinc429>
                <decision-height-ncd>false</decision-height-ncd>
                <decision-height>200</decision-height>
                </arinc429>
            </inputs>
        </mk-viii>
    <altimeter>
        <millibars type= "double">0</millibars>
    </altimeter>
    </instrumentation>

    <engines>
    <engine n="0">
    <fuel-flow-pph type="float">0</fuel-flow-pph>
    </engine>
    <engine n="1">
    <fuel-flow-pph type="float">0</fuel-flow-pph>
    </engine>
    </engines>

</PropertyList>