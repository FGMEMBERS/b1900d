<!--
YASIM flight model for the Beechcraft B1900D.
Jan 2005 by Syd Adams.

Flight Model improvements by Dave Martin.
-->
<airplane mass="10500">

 <approach speed="117" aoa="3" fuel="0.2">
  <control-setting axis="/controls/engines/engine[0]/throttle" value="0.2"/>
  <control-setting axis="/controls/engines/engine[1]/throttle" value="0.2"/>
  <control-setting axis="/controls/engines/engine[0]/condition" value="1.0"/>
  <control-setting axis="/controls/engines/engine[1]/condition" value="1.0"/>
  <control-setting axis="/controls/engines/engine[0]/propeller-pitch"
                   value="1.0"/>
  <control-setting axis="/controls/engines/engine[1]/propeller-pitch"
                   value="1.0"/>
  <control-setting axis="/controls/flight/flaps" value="1.0"/>
  <control-setting axis="/controls/gear/gear-down" value="1"/>
 </approach>

 <cruise speed="270" alt="25000" fuel="0.8"> 
  <control-setting axis="/controls/flight/elevator-trim" value="0.0"/>
  <control-setting axis="/controls/engines/engine[0]/throttle" value="0.75"/>
  <control-setting axis="/controls/engines/engine[1]/throttle" value="0.75"/>
  <control-setting axis="/controls/engines/engine[0]/condition" value="1.0"/>
  <control-setting axis="/controls/engines/engine[1]/condition" value="1.0"/>
  <control-setting axis="/controls/engines/engine[0]/propeller-pitch"
                   value="1.0"/>
  <control-setting axis="/controls/engines/engine[1]/propeller-pitch"
                   value="1.0"/>
  <control-setting axis="/controls/flight/flaps" value="0.0"/>
  <control-setting axis="/controls/gear/gear-down" value="0"/>
 </cruise>

 
 <cockpit x="4.2" y="-0.3" z="0.27"/>

 
  <fuselage ax="7.00"  ay="0" az="0" bx="4.0" by="0" bz="0"
           width="1.50" taper="0" midpoint="1.0"/>
  <fuselage ax="4.0"  ay="0" az="0" bx="-4.0" by="0" bz="0"
           width="1.50" taper="1"/>
 <fuselage ax="-4.0"  ay="0" az="0" bx="-9.5" by="0" bz="0"
           width="1.5" taper="0" midpoint="0.0"/>

 <!--

<fuselage ax="2.5"  ay="-2.8" az="-0.5" bx="-1.0" by="-2.80" bz="-1.0"
           width="1.0" taper="0" midpoint="0.5"/>
<fuselage ax="2.5"  ay="2.8" az="-0.5" bx="-1.0" by="2.80" bz="-1.0"
           width="1.0" taper="0" midpoint="0.5"/>
	   
-->	   
	   
	   
	   
	   
 <wing x="0.0" y="0.80" z="-0.9" length ="8.0" chord ="2.8"
      sweep="0" dihedral="7" taper="0.4"  camber ="0.1" incidence ="3.0" twist ="-4.0"><!-- incidence="4.0" twist="-4.0"  -->
  <stall aoa="7.5" width="6" peak="1.5"/>
  <flap0 start="0" end=".57" lift="1.2" drag="1.3"/>
  <flap1 start=".57" end=".95" lift="1.7" drag="1.2"/>
  <control-input axis="/controls/flight/flaps" control="FLAP0"/>
  <control-speed control="FLAP0" transition-time="5"/>
  <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>
  <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
  <control-input axis="/controls/flight/aileron-trim" control="FLAP1"
                 split="true"/>
  <control-output control="FLAP1" side="left"
		  prop="/surface-positions/left-aileron-pos-norm"/>
  <control-output control="FLAP1" side="right"
		  prop="/surface-positions/right-aileron-pos-norm"/>
 </wing>

 <hstab x="-9.25" y="0.0" z="2.5" length ="2.8" chord ="1.8" 
        sweep="12" dihedral="0" taper="0.55" incidence="0" effectiveness="3.0">
  <stall aoa="18" width="4" peak="1.5"/>
  <flap0 start="0" end="1" lift="1.5" drag="1.2"/>
  <control-input axis="/controls/flight/elevator" control="FLAP0"/>
  <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>
  <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
 </hstab>

 <vstab x="-8.0" y="0.00" z="0.5" length ="2.2" chord ="3.0"
        sweep="22" taper="0.7" effectiveness="1.0">
  <stall aoa="16" width="4" peak="1.5"/>
  <flap0 start="0" end="1" lift="1.3" drag="1.3"/>
  <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
  <control-input axis="/controls/flight/rudder-trim" control="FLAP0"
                 invert="true"/>
  <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
 </vstab>

 <tank x="0.00" y="2.00" z="-0.7" capacity="1500"/>
 <tank x="0.00" y="-2.00" z="-0.7" capacity="1500"/>
 <tank x="0.00" y="4.00" z="-0.5" capacity="500"/>
 <tank x="0.00" y="-4.00" z="-0.5" capacity="500"/>

 <gear x="6.62" y="0.00" z="-2.2" compression=".15" retract-time="5" spring="0.2" damp="1.0">
  <control-input axis="/controls/flight/rudder" control="STEER" square="true"/>
  <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
  <control-speed control="EXTEND" transition-time="7"/>
  <control-output control="EXTEND" prop="/gear/gear[2]/position-norm"/>
 </gear>

 <gear x="-0.6" y="-2.65" z="-2.3" compression=".25" retract-time="5" spring="0.3" damp="1.0">
  <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
  <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
  <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
  <control-speed control="EXTEND" transition-time="6.2"/>
  <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>
 </gear>

 <gear x="-0.6" y="2.65" z="-2.3" compression=".25" retract-time="5" spring="0.3" damp="1.0">
  <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
  <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
  <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
  <control-speed control="EXTEND" transition-time="6"/>
  <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>
 </gear>

 <propeller x="1.9" y="-2.65" z="0.0"
            mass="400" moment="80" radius="1.3"
            cruise-speed="270" cruise-rpm="1700"
            cruise-power="1000" cruise-alt="20000"
            min-rpm="1000" max-rpm="1700">
  <turbine-engine
            eng-power="1270" eng-rpm="1700" alt="9000"
            flat-rating="1000"
            min-n2="70" max-n2="100"
            bsfc="0.40"/>
  <actionpt x="2.23" y="-2.65" z="0.0"/>
  <control-input axis="/controls/engines/engine[0]/throttle"
                 control="THROTTLE"/>
  <control-input axis="/controls/engines/engine[0]/condition"
            control="CONDLEVER"/>
  <control-input axis="/controls/engines/engine[0]/starter"
            control="STARTER"/>
  <control-input axis="/controls/engines/engine[0]/propeller-pitch"
            control="ADVANCE"/>
  <control-input axis="/controls/engines/engine[0]/propeller-feather"
            control="PROPFEATHER"/>
 </propeller>

 <propeller x="1.9" y="2.65" z="0.0"
            mass="400" moment="80" radius="1.3"
            cruise-speed="270" cruise-rpm="1700"
            cruise-power="1000" cruise-alt="20000"
            min-rpm="1000" max-rpm="1700">
  <turbine-engine
            eng-power="1270" eng-rpm="1700" alt="9000"
            flat-rating="1000"
            min-n2="70" max-n2="100"
            bsfc="0.40"/>
  <actionpt x="2.23" y="2.65" z="0.0"/>
  <control-input axis="/controls/engines/engine[1]/throttle"
            control="THROTTLE"/>
  <control-input axis="/controls/engines/engine[1]/condition"
            control="CONDLEVER"/>
  <control-input axis="/controls/engines/engine[1]/starter"
            control="STARTER"/>
  <control-input axis="/controls/engines/engine[1]/propeller-pitch"
            control="ADVANCE"/>
  <control-input axis="/controls/engines/engine[1]/propeller-feather"
            control="PROPFEATHER"/>
 </propeller>

<!-- Engine&Gearbox mass locations -->  
<ballast x="1.4" y="-2.65" z="-0.5" mass="1200"/>
<ballast x="1.4" y="2.65" z="-0.5" mass="1200"/>

<!-- Cockpit mass and Avionics -->
<ballast x="4.5" y="0.0" z="0.0" mass="900"/>

<!-- NoseGear assembly -->
<ballast x="4.7" y="0.0" z="-1.0" mass="500"/>

<!-- MainGear assembly -->
<ballast x="0.0" y="-2.65" z="-1.0" mass="600"/>
<ballast x="0.0" y="2.65" z="-1.0" mass="600"/>

