<?xml version="1.0"?>

<PropertyList>
 <path>efis84-ehsi.ac</path>
 
  <animation>
  <type>material</type>
    <object-name>EHSI.face</object-name>
    <object-name>EHSI.gsp1</object-name>
    <global type="bool">true</global>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>/controls/lighting/eadi-ehsi-norm</factor-prop>
  </emission>
</animation>

 <animation>
  <type>material</type>
    <object-name>EHSI.bezel</object-name>
    <global type="bool">true</global>
  <emission>
    <red>0.2</red>
    <green>0.2</green>
    <blue>0.2</blue>
    <factor-prop>/controls/lighting/panel-norm</factor-prop>
  </emission>
</animation>


 <animation>
   <type>select</type>
   <object-name>EHSI.gps</object-name>
   <condition>
       <equals>
         <property>/instrumentation/nav/slaved-to-gps</property>
         <value>true</value>
       </equals>
   </condition>
 </animation>



  <animation>
    <type>rotate</type>
    <object-name>hdg-bug</object-name>
    <property>/autopilot/internal/fdm-heading-bug-error-deg</property>
    <axis>
      <x>-1.0</x>
      <y>0</y>
      <z>0.0</z>
    </axis>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.006</z-m>
    </center>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>HDGback</object-name>
    <property>/orientation/heading-magnetic-deg</property>
    <axis>
      <x>1.0</x>
      <y>0</y>
      <z>0.0</z>
    </axis>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.006</z-m>
    </center>
  </animation>

 

<!--  course -->

  <animation>
    <type>rotate</type>
    <object-name>CRSneedle</object-name>
    <object-name>CRSdeflection</object-name>
    <property>/instrumentation/flightdirector/course</property>
    <axis>
      <x>-1.0</x>
      <y>0</y>
      <z>0.0</z>
    </axis>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.006</z-m>
    </center>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>CRSdeflection</object-name>
    <property>/instrumentation/flightdirector/course-offset</property>
    <interpolation>
      <entry>
        <ind>  -999.0</ind>
        <dep>   -0.02</dep>
      </entry>   
      <entry>
        <ind>  -10.0</ind>
        <dep>   -0.02</dep>
      </entry>   
      <entry>
        <ind>  0.0</ind>
        <dep>   0.0</dep>
      </entry> 
      <entry>
        <ind>  10.0</ind>
        <dep>   0.02</dep>
      </entry>
            <entry>
        <ind>  999.0</ind>
        <dep>   0.02</dep>
      </entry>   
 </interpolation>
    <axis>
      <x>0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.006</z-m>
    </center>
  </animation>
  



<animation>
  <type>textranslate</type>
  <object-name>EHSI.crs1</object-name>
  <property>/instrumentation/flightdirector/dtk</property>
  <factor>0.001</factor>
  <step>100</step>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>
 
<animation>
  <type>textranslate</type>
  <object-name>EHSI.crs2</object-name>
  <property>/instrumentation/flightdirector/dtk</property>
  <factor>0.01</factor>
  <step>10</step>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>EHSI.crs3</object-name>
  <property>/instrumentation/flightdirector/dtk</property>
  <factor>0.1</factor>
  <step>1</step>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>
 
  
<!--  hdg bug -->
<animation>
  <type>textranslate</type>
  <object-name>EHSI.hdg1</object-name>
   <property>/autopilot/settings/heading-bug-deg</property>
  <factor>0.001</factor>
  <step>100</step>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>
 
<animation>
  <type>textranslate</type>
  <object-name>EHSI.hdg2</object-name>
   <property>/autopilot/settings/heading-bug-deg</property>
  <factor>0.01</factor>
  <step>10</step>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>EHSI.hdg3</object-name>
   <property>/autopilot/settings/heading-bug-deg</property>
  <factor>0.1</factor>
  <step>1</step>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>
 
  
<!--  groundspeed -->
<animation>
  <type>textranslate</type>
  <object-name>EHSI.gsp1</object-name>
  <property>/instrumentation/gps/indicated-ground-speed-kt</property>
  <factor>0.001</factor>
  <step>100</step>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>
 
<animation>
  <type>textranslate</type>
  <object-name>EHSI.gsp2</object-name>
  <property>/instrumentation/gps/indicated-ground-speed-kt</property>
  <factor>0.01</factor>
  <step>10</step>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>EHSI.gsp3</object-name>
  <property>/instrumentation/gps/indicated-ground-speed-kt</property>
  <factor>0.1</factor>
  <step>1</step>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>
 

    
</PropertyList>
