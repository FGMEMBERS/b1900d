<?xml version="1.0"?>

<PropertyList>

 <path>fdc.ac</path>


 <animation>
  <type>material</type>
    <object-name>APbtn</object-name>
    <global type="bool">true</global>
  <emission>
    <red>1.0</red>
    <green>0.5</green>
    <blue>0.2</blue>
    <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
</animation>

 <animation>
  <type>material</type>
    <object-name>FDC</object-name>
    <global type="bool">true</global>
  <emission>
    <red>0.2</red>
    <green>0.22</green>
    <blue>0.2</blue>
    <factor-prop>/controls/lighting/panel-norm</factor-prop>
  </emission>
</animation>
 
 
<animation>
 <type>select</type>
<object-name>AP-alt</object-name>
