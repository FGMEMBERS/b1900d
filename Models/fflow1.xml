<?xml version="1.0"?>

<PropertyList>

 <path>fflowgauge.ac</path>

   <animation>
    <type>rotate</type>
    <object-name>PPH.needle</object-name>
    <property>/engines/engine[0]/fuel-flow-pph</property>
       <interpolation>
      <entry>
        <ind>      0.0</ind>
        <dep>   0.0</dep>
      </entry>
      <entry>
        <ind>   800.0</ind>
        <dep>  240.0</dep>
      </entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0</y>
      <z>0.0</z>
    </axis>
  </animation>
 
  
   <animation>
  <type>material</type>
    <object-name>PPHFace</object-name>
    <emission>
    <red>1.0</red>
    <green>0.4</green>
    <blue>0.2</blue>
    <factor-prop>/controls/lighting/engines-norm</factor-prop>
  </emission>
</animation>

 <animation>
  <type>material</type>
    <object-name>PPHBezel</object-name>
    <emission>
    <red>0.2</red>
    <green>0.2</green>
    <blue>0.2</blue>
    <factor-prop>/controls/lighting/panel-norm</factor-prop>
  </emission>
</animation>
  
</PropertyList>
