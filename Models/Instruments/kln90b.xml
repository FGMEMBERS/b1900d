<PropertyList>

    <path>kln90b.ac</path>

<!--    OSG hotspots  -->

    <animation>
        <type>pick</type>
        <object-name>LH.dn</object-name>
        <action>
            <button>1</button>
            <repeatable>false</repeatable>
            <binding>
