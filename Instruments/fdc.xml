<?xml version="1.0"?>
<PropertyList>

    <path>fdc.ac</path>

    <animation>
        <type>material</type>
        <object-name>APbtn</object-name>
        <emission>
            <red>0.025</red>
            <green>0.012</green>
            <blue>0.007</blue>
            <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>FDC</object-name>
        <emission>
            <red>0.01</red>
            <green>0.01</green>
            <blue>0.01</blue>
            <factor-prop>controls/lighting/panel-norm</factor-prop>
        </emission>
    </animation>
 
    <animation>
        <type>select</type>
        <object-name>AP-alt</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/vnav</property>
                <value>1</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-alts</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/vnav</property>
                <value>2</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-vs</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/vnav</property>
                <value>3</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-ias</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/spd</property>
                <value>1</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-dcs</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/vnav</property>
                <value>4</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-climb</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/vnav</property>
                <value>5</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-wl</object-name>
        <condition>
            <and>
                <equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>0</value>
                </equals>
                <not>
                    <property>autopilot/locks/passive-mode</property>
                </not>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-hdg</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/lnav</property>
                <value>1</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-nav</object-name>
        <condition>
            <or>
                <equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>2</value>
                </equals>
                <equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>3</value>
                </equals>
                <equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>6</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-apr</object-name>
        <condition>
            <or>
                <equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>4</value>
                </equals>
                <equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>5</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-bc</object-name>
        <condition>
            <property>instrumentation/nav/back-course-btn</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-gs</object-name>
        <condition>
            <property>autopilot/locks/gs1-hold</property>
        </condition>
    </animation>

</PropertyList>
